# 4:15  hours
set timeout 153000
send "./local_script  $rfile  \r"

expect {
                "end of test script"
                {
                        puts "detected end of test script"
                        set file [ open $results_file w]
                        puts $file "normal"
                        send "kill -9 $ksh_pid\r"
                }
                timeout
                {
                        puts "detected timeout"
                        set file [ open $results_file w]
                        puts $file "error"
                        send "kill -9 $ksh_pid\r"
                }
	}
